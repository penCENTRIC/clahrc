- unless page_activity.trackable.nil?
  .activity[page_activity]{ :class => cycle('odd', 'even')}
    .icon
      = avatar_tag(page_activity.user, :style => :icon)
    .body
      .info
        = page_activity.created_at.strftime('%A, %e %B %Y at %k:%M')
      .title
        - if page_activity.group
          - if page_activity.action == 'create'
            = "#{link_to_member(page_activity.user)} published a new page '#{link_to_page(page_activity.page)}' in the group '#{link_to_group(page_activity.group)}'."
          - elsif page_activity.action == 'update'
            = "#{link_to_member(page_activity.user)} edited the page '#{link_to_page(page_activity.page)}' in the group '#{link_to_group(page_activity.group)}'."
        - else
          - if page_activity.action == 'create'
            = "#{link_to_member(page_activity.user)} published a new page '#{link_to_page(page_activity.page)}'."
          - elsif page_activity.action == 'update'
            = "#{link_to_member(page_activity.user)} edited the page '#{link_to_page(page_activity.page)}'."