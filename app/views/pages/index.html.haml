- content_for :content_header do
  %h1
    - if @group
      = @group.name_to_s
    - elsif @user
      = @user.name_to_s
    - else
      = t('index')
- if @group || @user
  %h2= t('index')
.pages
  - if @directory.pages.blank?
    %p
      No pages could be found.
  - else
    = render @directory.pages
= render @directory