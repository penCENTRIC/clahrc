- content_for :content_sidebar do
  .block
    %ul
      - unless @post.nil? || @post.new_record?
        - if @post.can_be_edited_by?(current_user)
          %li= link_to_edit_post(@post)
        - if @post.can_be_destroyed_by?(current_user)
          %li= link_to_destroy_post(@post)
      - unless @user
        %li= link_to_new_post(current_user)
- if @user
  = render :file => 'layouts/members'
- elsif @group
  = render :file => 'layouts/groups'
- else
  = render :file => 'layouts/application'