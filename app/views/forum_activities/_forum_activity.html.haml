- unless forum_activity.trackable.nil?
  .activity[forum_activity]{ :class => cycle('odd', 'even')}
    .icon
      = avatar_tag(forum_activity.user, :style => :icon)
    .body
      .info
        = forum_activity.created_at.strftime('%A, %e %B %Y at %k:%M')
      .title
        - if forum_activity.action == 'create'
          = "#{link_to_member(forum_activity.user)} started a new forum '#{link_to_forum(forum_activity.forum)}' in the group '#{link_to_group(forum_activity.forum.group)}'."
        - elsif forum_activity.action == 'update'
          = "#{link_to_member(forum_activity.user)} edited the forum '#{link_to_forum(forum_activity.forum)}' in the group '#{link_to_group(forum_activity.forum.group)}'."