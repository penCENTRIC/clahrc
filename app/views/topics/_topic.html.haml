.topic[topic]{ :class => cycle('odd', 'even') }
  .icon
    %img{ :src => '/images/icons/comment.png' }
  .body
    .title
      = link_to_topic(topic, :query => @query)
    .teaser
      = topic_teaser(topic, :quest => @query)
    .links
      %ul
        - if topic.can_be_edited_by?(current_user)
          %li= link_to_edit_topic(topic)
        - if topic.can_be_destroyed_by?(current_user)
          %li= link_to_destroy_topic(topic)