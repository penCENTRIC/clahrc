= content_for :content_header do
  %h1= t('new')
- form_for @wiki_page, :url => @group ? group_wiki_pages_path(@group) : my_wiki_pages_path do |f|
  = error_messages_for :page
  %ol
    %li
      = f.label :title, t('title')
      = f.text_field :title, :title => t('title_help')
    %li
      = f.label :tag_list, t('tags')
      = f.text_field :tag_list, :title => t('tags_help')
    %li
      = f.label :body, t('body')
      = f.text_area :body, :title => t('body_help')
    %li
      = f.submit t('create')