.forum[forum]{ :class => cycle('odd', 'even') }
  .icon
    %img{ :src => '/images/icons/comments.png' }
  .body
    .title
      = link_to_forum(forum, :query => @query)
    .teaser
      = forum_teaser(forum, :query => @query)
    .links
      %ul
        - if forum.can_be_edited_by?(current_user)
          %li= link_to_edit_forum(forum)
        - if forum.can_be_destroyed_by?(current_user)
          %li= link_to_destroy_forum(forum)