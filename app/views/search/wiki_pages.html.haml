- content_for :content_header do
  %h1 Search Results
- form_tag(wiki_pages_search_path, :method => :get) do
  %ol
    %li
      = text_field_tag :q, @query || 'Search', :onclick => 'if(this.value=="Search"){this.value=""}', :onblur => 'if(this.value==""){this.value="Search"}'
- if @wiki_page_results.empty?
  %p
    No wiki pages could be found that matched the search.
- else
  %h2= pluralize(@wiki_page_results.total_entries, 'Wiki page')
  = render @wiki_page_results
  .directory= will_paginate(@wiki_page_results)