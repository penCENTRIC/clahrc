- content_for :content_header do
  %h1 Search Results
- form_tag(pages_search_path, :method => :get) do
  %ol
    %li
      = text_field_tag :q, @query || 'Search', :onclick => 'if(this.value=="Search"){this.value=""}', :onblur => 'if(this.value==""){this.value="Search"}'
- if @page_results.empty?
  %p
    No pages could be found that matched the search.
- else
  %h2= pluralize(@page_results.total_entries, 'Page')
  = render @page_results
  .directory= will_paginate(@page_results)